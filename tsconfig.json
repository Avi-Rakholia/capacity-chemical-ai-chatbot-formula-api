{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["ES2021"],
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["node", "express"]
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "tmp"]
}